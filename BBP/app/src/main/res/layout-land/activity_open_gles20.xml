<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_open_gles20"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unifi.testmove.OpenGLES20Activity">

    <unifi.testmove.MyGLSurfaceView
        android:gravity="center"
        android:id="@+id/glSurfaceViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TableRow>
            <ImageButton
                android:background="@mipmap/left_arrow"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/LeftButton" />

        </TableRow>

        <TableRow>
            <ImageButton
                android:background="@mipmap/down_arrow"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/DownButton" />
        </TableRow>

        <TableRow>
            <ImageButton
                android:id="@+id/RightButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@mipmap/right_arrow"/>
        </TableRow>

    </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:id="@+id/PauseButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@mipmap/pause_resume" />

    </LinearLayout>

    <Chronometer
        android:id="@+id/Clock"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
